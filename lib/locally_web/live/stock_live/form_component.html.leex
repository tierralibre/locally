<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "stock-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :existence %>
  <%= checkbox f, :existence %>
  <%= error_tag f, :existence %>

  <%= label f, :units %>
  <%= number_input f, :units %>
  <%= error_tag f, :units %>

  <%= label f, :price %>
  <%= number_input f, :price %>
  <%= error_tag f, :price %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
